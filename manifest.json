{
    "manifest_version": 2,
    "name": "HEAR",
    "description": "A basic extension to check how many environments are running",
    "version": "1.0",
    "permissions": [
        "storage",
        "tabs",
        "<all_urls>",
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "img/hear128.png"
    },
    "background": { "scripts": ["js/background.js"] },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "web_accessible_resources": [
        "img/*.png"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}